{
  "name": "sigongon-frontend",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "predev": "node scripts/dev-guard.mjs",
    "predev:mobile": "node scripts/dev-guard.mjs",
    "predev:admin": "node scripts/dev-guard.mjs",
    "predev:all": "node scripts/dev-guard.mjs",
    "dev": "pnpm dev:all",
    "dev:mobile": "pnpm --filter @sigongon/mobile dev",
    "dev:admin": "pnpm --filter @sigongon/admin dev",
    "dev:all": "pnpm -r --parallel --filter @sigongon/types --filter @sigongon/api --filter @sigongon/ui --filter @sigongon/admin --filter @sigongon/mobile dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test:e2e": "playwright test",
    "test:e2e:admin": "playwright test --project=admin",
    "test:e2e:mobile": "playwright test --project=mobile",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "turbo": "^2.5.4"
  }
}
